<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_height="match_parent"
	android:layout_width="match_parent"
	tools:context=".MainActivity"
	android:orientation="vertical"
	android:background="@drawable/image_bg_01">

	<android.support.v7.widget.Toolbar
		android:id="@+id/toolbar"
		android:layout_width="match_parent"
		android:layout_height="?attr/actionBarSize"/>

	<LinearLayout
		android:layout_height="50dp"
		android:layout_width="match_parent"
		android:gravity="center|center_vertical|center_horizontal">

		<Button
			style="?android:attr/buttonBarButtonStyle"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="Start / Domou"
			android:id="@+id/main_button_start"
			android:onClick="onMainButton"
			android:textColor="#000000"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textStyle="bold"
			android:shadowColor="#000000"
			android:shadowRadius="2"/>

		<View
			android:background="?android:attr/dividerHorizontal"
			android:layout_height="match_parent"
			android:layout_width="1dp"/>

		<Button
			style="?android:attr/buttonBarButtonStyle"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="Info"
			android:id="@+id/main_button_info"
			android:onClick="onMainButton"
			android:textColor="#000000"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textStyle="bold"
			android:shadowRadius="2"
			android:shadowColor="#000000"/>

		<View
			android:background="?android:attr/dividerHorizontal"
			android:layout_height="match_parent"
			android:layout_width="1dp"/>

		<Button
			style="?android:attr/buttonBarButtonStyle"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="FÃ³rum"
			android:id="@+id/main_button_forum"
			android:onClick="onMainButton"
			android:textStyle="bold"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:textColor="#000000"
			android:shadowColor="#000000"
			android:shadowRadius="3"/>

	</LinearLayout>

	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:background="#FF0F00">

		<View
			android:layout_height="1dp"
			android:layout_width="match_parent"
			android:background="#0800FB"/>

	</LinearLayout>

	<FrameLayout
		android:layout_height="match_parent"
		android:layout_width="match_parent"
		android:id="@+id/content_frame"
		android:visibility="visible"/>

</LinearLayout>

